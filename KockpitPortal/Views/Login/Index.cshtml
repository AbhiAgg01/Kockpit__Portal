    <section class="login-wrapper" style="overflow:hidden">
        <div class="login-form">
            <div class="logo">
                <img src="~/assets/logo-new.svg" alt="Kockpit Logo">
            </div>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { id = "formLogin", name = "formLogin", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="hidden" id="continue" name="continue" value="@ViewBag.Scontinue" />
                <div class="form-text">
                    <h2>Login</h2>
                    <p>Sign in by entering your account here.</p>
                </div>
                <div class="input-wrapper">
                    <input type="text" id="email" name="email" autocomplete="off" placeholder="Username" />
                    <label for="email">Email</label>
                    <div class="input-icon">
                        <i class="bi bi-envelope-fill"></i>
                    </div>
                </div>
                <div class="input-wrapper">
                    <div class="input-icon toggle-password-visible">
                        <i class="bi bi-eye-fill show-pass"></i>
                        <i class="bi bi-eye-slash-fill hide-pass"></i>
                    </div>
                    <input type="password" id="password" name="password" autocomplete="off" placeholder="Enter Password">
                    <label for="password">Password</label>
                </div>
                <div class="form-actions">
                    @*<div class="remember-me">
                        <input type="checkbox" id="remember">
                        <label for="remember">Remember me</label>
                    </div>*@
                    <a asp-action="ForgotPassword" asp-controller="Login">Forgot Password?</a>
                </div>
                <button type="button" id="btnLogin">Login</button>
            }
        </div>

        <div class="product-info">
            <div class="slider">
                <div class="slide-container">
                    <div class="blur-box">
                        <div class="slide active">
                            <div class="icon">
                                <img src="~/assets/nucleus.svg" alt="">
                            </div>
                        </div>
                        <div class="slide">
                            <div class="icon">
                                <img src="~/assets/konnect.svg" alt="">
                            </div>
                        </div>
                        <div class="slide">
                            <div class="icon">
                                <img src="~/assets/bxray.svg" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="circle circle-small"></div>
                    <div class="circle circle-big"></div>
                </div>
                <div class="slide-text-wrapper">
                    <div class="slide-text active">
                        <h2>Nucleus</h2>
                        <p>Platform for Big data Solutions for easy management.</p>
                    </div>
                    <div class="slide-text">
                        <h2>Konnect</h2>
                        <p>
                            Analyze and share reports with a single click.
                        </p>
                    </div>
                    <div class="slide-text">
                        <h2>Business X-Ray</h2>
                        <p>Real-Time tracking of various processes for any TAT.</p>
                    </div>
                </div>
                <div class="slide-indicators">
                    <div class="indicator active"></div>
                    <div class="indicator"></div>
                    <div class="indicator"></div>
                </div>
            </div>
        </div>

    </section>



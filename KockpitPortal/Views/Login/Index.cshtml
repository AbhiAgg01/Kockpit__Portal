                    $('#email').parent().addClass('error');
                    allow = false;
                }
                if ($('#password').val().trim().length == 0) {
                    $('#password').parent().addClass('error');
                    allow = false;
                }
                if (!allow) {
                    toastr.error("Please enter valid email/password.", "Error", { "iconClass": 'new-error' });

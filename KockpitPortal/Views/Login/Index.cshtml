                removeActive();
                activeSlide++;
                addActive();
            }
        }, 5000);

        function removeActive() {
            allSlides[activeSlide].classList.remove("active");
            allSlidesText[activeSlide].classList.remove("active");
            allIndicators[activeSlide].classList.remove("active");
        }

        function addActive() {
            allSlides[activeSlide].classList.add("active");
            allSlidesText[activeSlide].classList.add("active");
            allIndicators[activeSlide].classList.add("active");
        }

        const inputs = document.querySelectorAll("input");

        inputs.forEach(item => {
            item.addEventListener("click", () => {
                item.nextElementSibling.classList.add("active");
            });
        });

        const togglePasswordVisibility = document.querySelectorAll(".toggle-password-visible");

        togglePasswordVisibility.forEach(item => {
            item.addEventListener("click", () => {
                item.nextElementSibling.focus();
                if (item.classList.contains("active")) {
                    item.classList.remove("active");
                    item.nextElementSibling.type = 'password';
                } else {
                    item.classList.add("active");
                    item.nextElementSibling.type = 'text';
                }
            });
        });

    </script>




